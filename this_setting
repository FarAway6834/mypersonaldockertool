#!/bin/sh
sudo apt update -y && apt upgrade -y && apt install -y snap devscripts && snap install -y python3 python3-pip && snap install -y snapcraft --classic

chmod u+x ./this_setting
cd package_manager
chmod u+x build_*
chmod u+x deploy_*
cd ..
cd mypersonaldockeruse
chmod u+x build_this_pkg
cd ..

python -m venv .venv
. myvenv
pip download -y mydockeruse
pip install -y mydockeruse